<div class="column">
        <!-- Points sans coordonnées définies en dur dans HTML -->
        <div class="dot" style="left: 50px; top: 100px;"></div>
        <div class="dot" style="left: 100px; top: 300px;"></div>
        <div class="dot" style="left: 150px; top: 500px;"></div>
        <div class="dot" style="left: 200px; top: 700px;"></div>
        <div class="dot" style="left: 250px; top: 900px;"></div>
    </div>

    <script>
        // Fonction qui reçoit les coordonnées dynamiquement
        function bubble(event) {
            const x = event.target.offsetLeft;
            const y = event.target.offsetTop;
            alert(`Coordonnées du point : X = ${x}, Y = ${y}`);
        }

        // Récupérer tous les éléments avec la classe "dot"
        const dots = document.querySelectorAll('.dot');

        // Ajouter un gestionnaire d'événements onclick pour chaque point
        dots.forEach(dot => {
            dot.addEventListener('click', bubble);
        });
    </script>






PERMET DE RECUPERER LES COORDONNEES DYNAMIQUEMENT


container.innerHTML = "<div class='text-container active' style='position: relative;'><p>Ceci est un exemple de texte à l'intérieur d'une div. Tu peux y ajouter autant de contenu que tu veux, comme des paragraphes, des images, etc.</p></div>";